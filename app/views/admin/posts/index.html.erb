<h2>投稿一覧</h2>
<div class="mt-3">
  <% @posts.each do |post| %>
    <div class="tweet">
      <div class="user"><%= post.user.name %></div>
      <div class="content"> <%= post.content %> </div>
      <div class="created_at"> <%= post.created_at %> </div>
      <%= link_to "削除", admin_post_path(post), method: :delete, data: {confirm: "この投稿を削除しますか？"} %>
    </div>
  <% end %>
</div>