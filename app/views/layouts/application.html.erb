<!DOCTYPE html>
<html>
  <head>
    <title>tweet app</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all',
                               'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application',
                               'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-success"><%= message %></div>
      <% end %>
      <div class="nav">
        <h1>tweet app</h1>
        <ul>
          <li><%= link_to "投稿一覧", posts_path %></li>
          <li><%= link_to "ユーザー一覧", users_path %></li>
          <% if current_user %>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "新規登録", new_user_path %></li>
            <li><%= link_to "ログイン", login_path %></li>
          <% end %>
        </ul>
      </div>
    </header>
    
    <main>
      <div class="container">
        <%= yield %>
      </div>
    <main>

  </body>
</html>