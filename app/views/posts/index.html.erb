<h2>投稿一覧</h2>
<%= link_to '新規投稿', new_post_path, class: 'btn btn-lg btn-primary' %>

<div class="mt-3">
  <% @posts.each do |post| %>
    <div class="tweet">
      <div class="user">User</div> 
      <div class="content"> <%= post.content %> </div>
      <div class="created_at"> <%= post.created_at %> </div>
      <%= link_to "編集", edit_post_path(post) %>
      <%= link_to "削除", post_path(post), method: :delete, data: {confirm: "この投稿を削除してもよろしいですか？"} %>
    </div>
  <% end %>
</div>
