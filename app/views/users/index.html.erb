<h2>ユーザー一覧</h2>

<div class="mt-3">
  <% @users.each do |user| %>
    <div>
      <div><%= user.name %></div>
      <%= link_to "詳細", user_path(user) %>
      <% if current_user && user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(user) %>
      <% end %>
    </div>
  <% end %>
</div>